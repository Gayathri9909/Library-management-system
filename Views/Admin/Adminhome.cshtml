<head>
    <link href="~/Content/Admin/Adminstyle.css" rel="stylesheet"/>
</head>
<body>
    @*navbar*@
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-custom">
        <div class="container">
            <h2 class="icon">Libra</h2>
            @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li style="margin-left:910px">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    @*navbar end*@
    <div class="amain"></div>
        <div class="admin-main">
            <h1 class="admin-text">Admin dashboard</h1>
        </div>
        <div class="admin-list">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <img src="~/Content/Admin/admin.jpg" class="cimg" style="width:300px;height:350px;" />
                </div>
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <img src="~/Content/Admin/users.jpg" class="cimg" style="width:300px;height:350px;" />
                </div>
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <img src="~/Content/Admin/book.jpg" class="cimg" style="width:300px;height:350px;" />
                </div>
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <img src="~/Content/Admin/request.jpg" class="cimg" style="width:300px;height:350px;" />
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 col-md-4 col-lg-3">
                    @*<button class="adminbtn">Add Admin</button>*@
                    @Html.ActionLink("Add Admin", "AdminDetails", "Admin", new { area = "" }, new { @class = "nav-link adminbtn" })
                </div>
                <div class="col-sm-6 col-md-4 col-lg-3">
                    @Html.ActionLink("User Management", "Usermanagement", "Admin", new { area = "" }, new { @class = "nav-link adminbtn" })
                </div>

                <div class="col-sm-6 col-md-4 col-lg-3">
                    @Html.ActionLink("Book Management", "Bookmanagement", "Admin", new { area = "" }, new { @class = "nav-link adminbtn" })
                    @*<button class="adminbtn">Book Management</button>*@
                </div>
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <button class="adminbtn">Manage Requests</button>
                </div>
            </div>
            <div class="row" style="margin-top:10px;">
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <img src="~/Content/Admin/message.jpg" class="cimg" style="width:300px;height:350px;" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-md-4 col-lg-3">
                    @Html.ActionLink("Messages", "ContactMessage", "Admin", new { area = "" }, new { @class = "nav-link adminbtn" })
                </div>
            </div>
        </div>
    
    @*footer*@
    <footer>
        <div class="admin-footer">
            <p style="text-align:center;font-weight:700">&copy; @DateTime.Now.Year - All right reserved</p>
        </div>
    </footer>
</body>

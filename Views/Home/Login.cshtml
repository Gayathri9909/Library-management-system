<head>
    <link href="~/Content/Login/Login.css" rel="stylesheet" />
    <link href="~/Content/Home/Nav.css" rel="stylesheet" />
</head>
<body>
@*navbar section*@
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-custom">
    <div class="container">
        <h2 class="icon">Libra</h2>

        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li style="margin-left:680px">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Books", "Booklist", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Admin", "Admin", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </div>
</nav>
@*navbar end*@
<div>
    @model library.Models.LoginModel
    <div class="login-main"></div>
   

<div class="login-section">
    <h1 class="login-text">Login</h1>
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <div class="form-group" style="display:flex;">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "email" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "inp1", placeholder = "Enter your email" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex;">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "password" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "inp2", placeholder = "Enter your password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            <h5 class="login-text2">New User? Register here</h5>
            <h5 class="login-link">@Html.ActionLink("Register here", "Signin", "Home", new { area = "" }, new { @class = "nav-link" })</h5>
        </div>
        <div>
            <button class="loginbtn">Login</button>
        </div>
    }

</div>
    </div>
    @*footer section*@
    <footer>
        <div style="display:flex">
            <div class="footer-section1">
                <h2 class="ficon">Libra</h2>
                <p>The library is a quiet haven where we can escape the hustle and bustle of everyday life.</p>
                <div style="margin-left:30px">
                    <img src="~/Content/Home/fb.png" style="width:30px;height:30px;margin-right:15px;" />
                    <img src="~/Content/Home/insta.jpg" style="width: 30px; height: 30px; margin-right: 15px;" />
                    <img src="~/Content/Home/link.png" style="width:30px;height:30px" />
                </div>
            </div>
            <div class="footer-section2">
                <h3 style="margin-bottom:10px;">Contact Us</h3>
                <h6>305,University building,Kochi,Ernakulam</h6>
                <h6>Email:<i>libralibrary@gmail.com</i></h6>
                <h6>Phone:<i>+91 9999999999</i></h6>
                <h6>Website:<i>www.libralibrary@gmail.com</i></h6>
            </div>
        </div>
        <p style="text-align:center;font-weight:700">&copy; @DateTime.Now.Year - All right reserved</p>
    </footer>
</body>

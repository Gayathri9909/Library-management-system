<head>
    <link href="~/Content/Home/Nav.css" rel="stylesheet" />
    <link href="~/Content/Book/Book.css" rel="stylesheet" />
</head>
<body>
    @*navbar*@
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-custom">
        <div class="container">
            <h2 class="icon">Libra</h2>
            @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li style="margin-left:760px">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Books", "Booklist", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    @*navbar end*@
<div>
    <div class="book-main"></div>
  
    <div class="book-section">
        @model IEnumerable<library.Models.BookModel>
        <h1 class="book-text">Collection of books</h1>
        <div class="book-list">
            <div class="container">
                <!-- Search Form -->
                @using (Html.BeginForm("Booklist", "Home", FormMethod.Get))
                {
                    <div class="search-container">
                        <b>Search by:</b>
                        @Html.RadioButton("searchBy", "Title", true) <text>Title</text>
                        @Html.RadioButton("searchBy", "Category") <text>Category</text>
                        @Html.TextBox("search", "", new { @class = "form-control" })

                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                }


            </div>

                <!-- Header Row -->
            
              <div class="row custom-header">
                    <div class="col-sm-1">
                        @Html.DisplayNameFor(model => model.BookId)
                    </div>
                    <div class="col-sm-3">
                        @Html.DisplayNameFor(model => model.BookTitle)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Author)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NumberOfBooks)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Category)
                    </div>
                </div>

                
                <!-- Data Rows -->
                @foreach (var item in Model)
                {
                    <div class="row mb-2">
                        <div class="col-sm-1">
                            @Html.DisplayFor(modelItem => item.BookId)
                        </div>
                        <div class="col-sm-3">
                            @Html.DisplayFor(modelItem => item.BookTitle)
                        </div>
                        <div class="col-sm-2">
                            @Html.DisplayFor(modelItem => item.Author)
                        </div>
                        <div class="col-sm-2">
                            @Html.DisplayFor(modelItem => item.NumberOfBooks)
                        </div>
                        <div class="col-sm-2">
                            @Html.DisplayFor(modelItem => item.Category)
                        </div>
                    </div>
                }
   
            </div>
        </div>

    </div>

        @*footer*@
        <footer>
            <div style="display:flex">
                <div class="footer-section1">
                    <h2 class="ficon">Libra</h2>
                    <p>The library is a quiet haven where we can escape the hustle and bustle of everyday life.</p>
                    <div style="margin-left:30px">
                        <img src="~/Content/Home/fb.png" style="width:30px;height:30px;margin-right:15px;" />
                        <img src="~/Content/Home/insta.jpg" style="width: 30px; height: 30px; margin-right: 15px;" />
                        <img src="~/Content/Home/link.png" style="width:30px;height:30px" />
                    </div>
                </div>
                <div class="footer-section2">
                    <h3 style="margin-bottom:10px;">Contact Us</h3>
                    <h6>305,University building,Kochi,Ernakulam</h6>
                    <h6>Email:<i>libralibrary@gmail.com</i></h6>
                    <h6>Phone:<i>+91 9999999999</i></h6>
                    <h6>Website:<i>www.libralibrary@gmail.com</i></h6>
                </div>
            </div>
            <p style="text-align:center;font-weight:700">&copy; @DateTime.Now.Year - All right reserved</p>
        </footer>
</body>

